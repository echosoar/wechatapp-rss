/* pages/index/read.wxss */
.article {
  padding: 10px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  color: #000;
  line-height: 26px;
}

.info {
  font-size: 10px;
  color: #999;
  line-height: 20px;
  white-space: nowrap;
  height: 20px;
  font-weight: lighter;
  overflow: hidden;
}

.content-text {
  font-size: 13px;
  line-height: 20px;
  color: #333;
  margin-bottom: 16px;
  word-break: break-all;
}

.content-image {
  display: block;
  margin: 0 auto;
  max-width: 100%;
  margin-bottom: 16px;
}