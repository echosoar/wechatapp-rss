.left {
  position: fixed;
  z-index: 5;
  top: 0;
  left: 0;
  padding: 0 10px;
  padding-top: 30px;
  width: 30%;
  height: 100%;
  box-sizing: border-box;
  background: #ffffff;
  border-right: 1px solid #f5f5f5;
}
.right {
  position: relative;
  width: 70%;
  margin-left: 30%;
  box-sizing: border-box;
  padding: 0 10px;
}
.title {
  position: absolute;
  top: 0;
  font-size: 13px;
  font-weight: bold;
  color: #000;
  text-align: center;
}
.settingType {
  width: 100%;
  height: 100%;
  
}
.settingTypeItem {
  margin-bottom: 10px;
  text-align: center;
  border-radius: 3px;
  height: 35px;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #a3a3a3;
  background: #f2f2f2;
  line-height: 35px;
  font-size: 12px;
}
.settingTypeItemSelected {
  color: #ffffff;
  background: #d6ba8b;
}

.settingItem {
  border-bottom: 1px solid #efefef;
  margin-bottom: 10px;
}
.itemFontSizeChange {
  position: relative;
  margin: 5px 0;
  height: 32px;
  padding: 0 32px;
  border-radius: 3px;
  background: #fefefe;
  overflow: hidden;
  line-height: 32px;
  font-size: 14px;
  color: #666;
  text-align: center;

}

.itemDoingBtn {
  position: absolute;
  width: 48px;
  height: 32px;
  background-color: #f5f5f5;
}
.jian { left: 0; }
.jia { right: 0; }