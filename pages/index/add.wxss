.formItem {
  position: relative;
  margin: 10px;
  padding-left: 80px;
  height: 36px;
  line-height: 36px;
  background: #f2f2f2;
  border-radius: 3px;
}
.formItemRightHave {
  padding-right: 80px;
}

.formLabel {
  position: absolute;
  left: 0;
  top: 0;
  line-height: 36px;
  width: 80px;
  text-align: center;
  font-size: 13px;
  background: #f8f8f8;
  border-radius: 3px 0 0 3px;
  color: #999;
}
.centerText {
  text-align: center;
  font-size: 13px;
  line-height: 36px;
}
.formInput {
  padding: 0 10px;
  height: 36px;
  outline: none;
  line-height: 36px;
  font-size: 13px;
  color: #000000;
}

.modal {
  position: absolute;
  z-index: 8;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

.addCategory {
  position: absolute;
  top: 0;
  right: 0;
  line-height: 36px;
  width: 80px;
  text-align: center;
  font-size: 13px;
  background: #f8f8f8;
  border-radius: 0 3px 3px 0;
  color: #999;
}

.addCategoryContainer {
  width: 80%;
  left: 10%;
  position: absolute;
  top: 30px;
  background: #ffffff;
  border-radius: 3px;
  overflow: hidden;
}
.modalTitle {
  padding: 0 10px;
  line-height: 36px;
  height: 36px;
  font-size: 13px;
  color: #666;
  border-bottom: 1px solid #ccc;
}

.modalBotton {
  display: inline-block;
  width: 50%;
  vertical-align: top;
  line-height: 36px;
  background: #f2f2f2;
  color: #999;
  text-align: center;
  font-size: 13px;
}

.bottonOk {
  background: #9cf;
  color: #fff;
}

.okAdd {
  position: relative;
  margin: 30px 10px;
  text-align: center;
  height: 36px;
  color: #ffffff;
  line-height: 36px;
  font-size: 13px;
  background: #9cf;
  border-radius: 3px;
}